                </a>
            </div>
        </div>
    </div>
    <!-- End: Topbar-Dropdown -->
    <!-- Start: Topbar -->
    <header id="topbar">
        <div class="topbar-left">
            <ol class="breadcrumb">
                <li class="crumb-active">
                    <a>Service</a>
                </li>
                <li class="crumb-link">
                    <a href="serviceList.html">Service Groups</a>
                </li>
            </ol>
        </div>

        <div class="topbar-right">
            <a href="addServiceGroup.html" class="btn btn-success" style="height:30px; padding:5px">+ Add Service Group</a>
        </div>
    </header>
    <!-- End: Topbar -->
    <!-- Begin: Content -->
    <section id="content" class="table-layout">
        <!-- Start: Header -->
        <!-- End: Header -->

        <div class="col-md-12" style="display: block;">
            <div class="panel panel-visible" id="spy2">
                <div class="panel-heading">
                    <div class="panel-title hidden-xs">
                        <span class="glyphicon glyphicon-tasks"></span>Services Groups
                    </div>
                </div>
                <div class="panel-body pn">



                    <div class="panel panel-visible" id="spy3">
                        <div class="panel-body pn">
                            <div class="table-responsive">
                                <table class="table table-striped table-hover" id="datatable2" cellspacing="0" width="100%">
                                    <thead>
                                        <tr role="row">
                                            <th class="sorting" tabindex="0" aria-controls="datatable2" rowspan="1" colspan="1"
                                                aria-label="Position: activate to sort column ascending" style="width: 15%; text-align: center;">
                                                <center> Service Group Name</center>
                                            </th>
                                            <th class="sorting" tabindex="0" aria-controls="datatable2" rowspan="1" colspan="1"
                                                aria-label="Age: activate to sort column ascending" style="width: 15%; text-align: center;">
                                                <center>  Status</center>
                                            </th>
                                            <th class="sorting" tabindex="0" aria-controls="datatable2" rowspan="1" colspan="1"
                                                aria-label="Age: activate to sort column ascending" style="width: 15%; text-align: center;">
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody id="myCustomers" style="font-size:13px;">
                                    @foreach (var item in Model)
                                    {
                                    
                                        <tr role="row" class="odd">
                                            <td class="sorting_1"><center>@item.Name</center></td>
                                            <td><center><button type="button" class="btn active btn-dark btn-sm" style="background-color: rgb(97,144,126);">Active</button></center></td>
                                            <td><center><div class="btn-group"><a type="button" href="viewServiceGroup.html" class="btn btn-success">View</a><a type="button" class="btn btn-primary" href="editServiceGroup.html">Edit</a><a type="button" class="btn btn-danger">Delete</a></div></center></td>

                                        </tr>
                                    }  


                                    </tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
