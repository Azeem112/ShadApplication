@model Shad_BookingApplication.Models.AspNetInvoiceOption
@{
    ViewBag.Title = "InvoiceOption";
    Layout = "~/Views/Shared/_SuperAdminNavigationBar.cshtml";



    List<SelectListItem> listItems = new List<SelectListItem>();


    listItems.Add(new SelectListItem
    {
        Text = " Immediately",
        Value = " Immediately",
        Selected = true
    });

    listItems.Add(new SelectListItem
    {
        Text = "Option1",
        Value = "Option1",
        Selected = false
    });

    listItems.Add(new SelectListItem
    {
        Text = "Option2",
        Value = "Option2",
        Selected = false
    });

    List<SelectListItem> listItems1 = new List<SelectListItem>();


    listItems1.Add(new SelectListItem
    {
        Text = " PDF",
        Value = " PDF",
        Selected = true
    });

    listItems1.Add(new SelectListItem
    {
        Text = "Thermal Receipt",
        Value = "Thermal Receipt",
        Selected = false
    });

}

    <!-- Start: Content-Wrapper -->
<section id="content_wrapper">

    <!-- Start: Topbar-Dropdown -->
    <!-- End: Topbar-Dropdown -->
