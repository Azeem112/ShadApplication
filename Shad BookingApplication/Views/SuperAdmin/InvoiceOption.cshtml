</section>

<!-- Jquery -->

<script src="@Url.Content("~/vendor/jquery/jquery-1.11.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/vendor/jquery/jquery_ui/jquery-ui.min.js")" type="text/javascript"></script>

<script type="text/javascript">


    $(document).ready(function () {

        //HideName_id

        $("#AddTax_btn").click(function () {

            var name= $("#tax_name_id").val();
            var rate= $("#tax_rate_id").val();

            $.ajax({
                type: "GET",
                url: "/SuperAdmin/Insert_tax",
                data: { "name": name,"rate":rate },
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    alert(response);
                    $("#tax_name_id").val("");
                    $("#tax_rate_id").val("");
                },
                failure: function (response) {
                    alert(response.responseText);
                },
                error: function (response) {
                    alert(response.responseText);
                }
            });
        });

        $("#checkboxDefault3").click(function () {
            if ($(this).prop("checked") == true)
            {
                $("#HideName_id").val(true);
            }
            else if ($(this).prop("checked") == false) {
                $("#HideName_id").val(false);
            }
        });

        $("#checkboxDefault4").click(function () {
            if ($(this).prop("checked") == true) {
                $("#HidePaymentHistory_id").val(true);
            }
            else if ($(this).prop("checked") == false) {
                $("#HidePaymentHistory_id").val(false);
            }
        });


    });

</script>
