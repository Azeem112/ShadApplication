        <div class="topbar-left">
            <ol class="breadcrumb">
                <li class="crumb-active">
                    <a href="dashboard.html">Invoice option</a>
                </li>
                <li class="crumb-icon">
                    <a href="dashboard.html">
                        <span class="glyphicon glyphicon-home"></span>
                    </a>
                </li>

            </ol>
        </div>
        <div class="topbar-right">

        </div>
    </header>
    <!-- End: Topbar -->
    <!-- Begin: Content -->
    <div class="panel">
        <div class="panel" id="spy3">

            <div class="panel-body pn">
                <div class="row">
                    <div class="col-md-4 col-xs-12">

                        <div class="row form-group">
                            <label class="col-md-12 text-left" style="margin-left:3% "><h3>Invoice settings</h3></label><br>

                            <label class="col-md-12 text-left" style="margin-left:3% ">Specify the payment terms and informations to appear on all invoices </label>


                        </div>
                    </div>

                    <div class="col-md-8 col-xs-12">
                        <br>
                        <label class="col-md-12 col-xs-10 text-left">Payment terms for invoices</label>
                        <div class="row form-group">

                            <label class="col-md-8 col-xs-10">
                                @Html.DropDownListFor(model => model.PaymentTerms, listItems, new { @class = "form-control", @style = "margin-left:3%" })
                                @Html.ValidationMessageFor(model => model.PaymentTerms, "", new { @class = "text-danger" })


                            </label>
                        </div>

                        <label class="col-md-12 col-xs-10 text-left">Invoice title</label>
                        <div class="row form-group">

                            <label class="col-md-8 col-xs-10">
                               
                                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control", @style = "margin-left:3% ", @id = "inputStandard", @placeholder = "Type Here..." } })
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })


                            </label>
                        </div>
                        <div class="col-md-8 col-xs-10" style="padding: 0px; margin:0px;">
                            <div class="col-md-6 col-xs-12" style=" float: left">

                                <label class="col-md-12 col-xs-10  text-left" style="padding-left: 3px; margin:0px;">Siret</label>
                                <div class="row form-group">

                                    <label class="col-md-12 col-xs-10">

                                        @*<input type="text" id="inputStandard" class="form-control" style="margin-left:2% " placeholder="Type Here...">*@

                                        @Html.EditorFor(model => model.Siret, new { htmlAttributes = new { @class = "form-control", @style = "margin-left:2% ", @id = "inputStandard", @placeholder = "Type Here..." } })
                                        @Html.ValidationMessageFor(model => model.Siret, "", new { @class = "text-danger" })




                                    </label>
                                </div>


                            </div>
                            <div class="col-md-6 col-xs-12" style=" float: right">

                                <label class="col-md-12 col-xs-10  text-left" style=" padding-left: 3px; margin:0px;">Ape</label>
                                <div class="row form-group">

                                    <label class="col-md-12 col-xs-10">

                                        @*<input type="text" id="inputStandard" class="form-control" style="margin-left:2% " placeholder="Type Here...">*@

                                        @Html.EditorFor(model => model.APE, new { htmlAttributes = new { @class = "form-control", @style = "margin-left:2% ", @id = "inputStandard", @placeholder = "Type Here..." } })
                                        @Html.ValidationMessageFor(model => model.APE, "", new { @class = "text-danger" })





                                    </label>
                                </div>


                            </div>


                        </div>
                        <label class="col-md-12 col-xs-12  text-left">Vat Number</label>
                        <div class="row form-group">

                            <label class="col-md-6 col-xs-10">
                               

                                @Html.EditorFor(model => model.VatNo, new { htmlAttributes = new { @class = "form-control", @style = "margin-left:5% ", @id = "inputStandard", @placeholder = "Type Here..." } })
                                @Html.ValidationMessageFor(model => model.VatNo, "", new { @class = "text-danger" })



                            </label>
                        </div>

                        <label class="col-md-12 col-xs-10  text-left">Payment instructions/ notes</label>
                        <div class="row form-group">

                            <label class="col-md-9 col-xs-10">
                              
                                @Html.TextAreaFor(model => model.PaymentInstructiones, new { @rows = "5", @id = "comment", @class = "form-control", @style = "margin-left:3%;resize: none;" })
                                @Html.ValidationMessageFor(model => model.PaymentInstructiones, "", new { @class = "text-danger" })


                            </label>
                        </div>

                        <label class="col-md-12 col-xs-10 text-left">Next Invoice Number</label>
                        <div class="row form-group">

                            <label class="col-md-6 col-xs-10">
                                @*<input type="text" id="inputStandard" class="form-control" style="margin-left:5% " placeholder="1">*@
                                @Html.EditorFor(model => model.NextNumber, new { htmlAttributes = new { @class = "form-control", @style = "margin-left:5% ", @id = "inputStandard", @placeholder = "1" } })
                                @Html.ValidationMessageFor(model => model.NextNumber, "", new { @class = "text-danger" })



                            </label>
                        </div>

                        <div class="row form-group">
                            <label class="col-md-6 col-xs-10" style="margin-left:3%;">
                                <div class="checkbox-custom mb5">
                                    <input type="checkbox" checked="" id="checkboxDefault3">
                                   
                                    <label for="checkboxDefault3">Hide business name, adress and logo</label>
                                </div>
                            </label>
                        </div>
                        @Html.HiddenFor(model => model.HideName, new { @id = "HideName_id" })


                        <div class="row form-group">
                            <label class="col-md-6 col-xs-10" style="margin-left:3%;">
                                <div class="checkbox-custom mb5">
                                    <input type="checkbox" checked="" id="checkboxDefault4">
                                    <label for="checkboxDefault4">Hide payment history on invoices</label>
                                </div>
                            </label>
                        </div>
                        @Html.HiddenFor(model => model.HidePaymentHistory, new { @id = "HidePaymentHistory_id" })

                    </div>
                </div>
                <div style="background-color: #eff0f2; height:2px; width:80%; margin-left: 2%;"> </div>
                <div class="row">
                    <div class="col-md-4 col-xs-12">

                        <div class="row form-group">
                            <label class="col-md-12 col-xs-10 text-left" style="margin-left:3% "><h3>Invoice printing settings</h3></label><br>

                            <label class="col-md-12  col-xs-10 text-left" style="margin-left:3% ">Generate invoices in either PDF formator as sales receipt(suitable for thermal printers) </label>


                        </div>
                    </div>
                    <div class="col-md-8 col-xs-12">

                        <div class="col-md-8 col-xs-10" style="padding: 0px; margin:0px;">
                            <div class="col-md-6 col-xs-10" style=" float: left">

                                <label class="col-md-12 col-xs-10  text-left" style=" padding-left: 3px; margin:0px;"><h3>Location</h3></label>
                                <div class="row form-group">

                                    <p class="col-md-12 col-xs-10" style="margin-left:3% ">

                                        Carateam
                                    </p>
                                </div>


                            </div>
                            <div class="col-md-6 col-xs-12" style=" float: right">

                                <label class="col-md-12 col-xs-10  text-left" style=" padding-left: 3px; margin:0px;"><h3>Print Format</h3></label>
                                <div class="row form-group">

                                    <label class="col-md-12 col-xs-10">
                                        @Html.DropDownListFor(model => model.PrintFormate, listItems1, new { @class = "form-control", @style = "margin-left:3%" })
                                        @Html.ValidationMessageFor(model => model.PrintFormate, "", new { @class = "text-danger" })
                                    </label>
                                </div>


                            </div>


                        </div>
                    </div>
                </div>
                <div style="background-color: #eff0f2; height:2px; width:80%; margin-left: 2%;"> </div>
                <div class="row">
                    <div class="col-md-3 col-xs-10">

                        <div class="row form-group">
                            <label class="col-md-12 col-xs-10 text-left" style="margin-left:3% "><h3>Taxes</h3></label><br>

                            <label class="col-md-12 col-xs-10 text-left" style="margin-left:3% ">Set up taxes that can applied to services and products </label>


                        </div>
                    </div>

                    <div class="col-md-9 col-xs-12">

                        <div class="col-md-3 col-xs-4">

                            <div class="row form-group" style="padding: 0px; margin: 0px;">
                                <br>
                                <label class="col-md-12  col-xs-10 text-left" style="padding: 0px; margin: 0px;"><strong>Tax Name</strong></label><br>

                                <div class="row form-group">


                                    <div class="input-group col-md-9 col-xs-9">

                                        <input type="text" id="tax_name_id" style="margin-left: 8%" class="form-control" />
                                    </div>
                                </div>



                            </div>

                        </div>
                        <div class="col-md-2 col-xs-3">

                            <div class="row form-group" style="padding: 0px; margin: 0px;">
                                <br>
                                <label class="col-md-12  col-xs-10 text-left" style="padding: 0px; margin: 0px;"><strong>Rate</strong></label><br>

                                <div class="row form-group">


                                    <div class="input-group col-md-9 col-xs-12">

                                        <input type="text" style="margin-left:8%" id="tax_rate_id" class="form-control" placeholder="20" /> <span class="input-group-addon">
                                            &nbsp; %
                                        </span>
                                    </div>
                                </div>



                            </div>

                        </div>
                        <div class="col-md-3 col-xs-3">

                            <div class="row form-group" style="padding: 0px; margin: 0px;">
                                <br>
                                <label class="col-md-12  col-xs-10 text-left" style="padding: 0px; margin: 0px; margin-bottom: 8%"><strong>Usage</strong></label><br>

                                <div class="row form-group">

                                    <label class="col-md-6  col-xs-5 text-left" style="margin-left:1%">0 items</label><span>&nbsp;</span><span class="glyphicon glyphicon-trash"></span><br>
                                </div>



                            </div>

                        </div>
                        <div class="col-md-1 col-xs-1" style="margin-top: 2%">
                            <button type="button" style="" id="AddTax_btn" class="btn btn-success">+</button>
                        </div>
                   
                     </div>
                </div>


                <br>

                <div style="background-color: #eff0f2; height:2px; width:80%; margin-left: 2%;"> </div>
                <div class="row">
                    <div class="col-md-3 col-xs-12">

                        <div class="row form-group">
                            <label class="col-md-12 text-left" style="margin-left:3% "><h3>Payment Types</h3></label><br>

                            <label class="col-md-12 text-left" style="margin-left:3% ">Create payment types to apply to invoice </label>
                        </div>
                    </div>
                    <div id="main_payment_section" class="col-md-6 col-xs-8">

                        <label class="col-md-12" style="margin-left: 4%"><h5>Payment Types</h5></label>
                        <div class="row form-group">

                            <div class="input-group col-md-10 col-xs-11 col-xs-offset-1">

                                <input type="text" class="form-control" placeholder="On Account" />
                            </div>


                        </div>

                        <div class="row form-group">

                            <div class="input-group col-md-10 col-xs-11 col-xs-offset-1">

                                <input type="text" class="form-control" placeholder="Credit Card" />
                            </div>


                        </div>

                        <div class="row form-group">

                            <div class="input-group col-md-10 col-xs-11 col-xs-offset-1">

                                <input type="text" class="form-control" placeholder="Cash" />
                            </div>


                        </div>
                    </div>
                    <div class="col-md-1 col-xs-1" style="margin-top: 2%">

                        <button type="button" style="" class="btn btn-success">+</button>

                    </div>
                    <br>
                </div>
            </div>

            <br><br><br><br>
        </div>
    </div>
