                    <div class="row form-group required">
                        <label class="col-md-2 col-xs-12 text-right control-label">Business Category:</label>
                        <div class="col-md-8 col-xs-12">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = @Html.DisplayName("Enter Category  Here") , required = "required" } })
